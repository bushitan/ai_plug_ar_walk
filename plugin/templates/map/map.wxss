
.map {
    position: absolute;
    width: 100vw;
    height: 20vh;
    bottom: 0;
    /* left: 100px; */
    /* background-color: green */

}

.map .map_dialog{
    position: absolute;
    width: 100%;
    height:60px;
}
.map .map_switch{
    position: absolute;
    width: 23px;
    height: 23px;

}

.map_btn{
    position: absolute;
    color: #fff;
    bottom: 0;
    right: 0;
    font-size: 9pt;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 5px;
    
}
.map_btn .map_icon{
    width: 23px;
    height: 23px;

}


/******* 打开地图后，在相机下方的阴影 ***********/
.map_camera{
    position: absolute;
    left: 0px;
    bottom: 0px;
    height: 52px;
    display: flex;
    align-items: center;
    /* background: linear-gradient(to top, rgba(0, 0, 0, 0.6)  0%, rgba(255, 255, 255, 0) 100%); */
    /* background: url(../../images/menu_bg.png); */
    width: 100%;
    padding: 10px 15px;

}
.map_camera .map_camera_bg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}


/******* 打开地图的按钮 ***********/
.map_on_switch{
    position: absolute;
    right: 15px;
    bottom: 15px;
    /* height: 52px; */
}
.map_on_switch .map_on_switch_bg{
    width: 52px;
    height: 52px;
}